                        }

                        .add-address-btn {
                            padding: 10px 20px;
                            background-color: #2ecc71;
                            color: white;
                            border: none;
                            border-radius: 4px;
                            cursor: pointer;
                            font-weight: 500;
                            margin-top: 15px;
                        }

                        .add-address-btn:hover {
                            background-color: #27ae60;
                        }

