<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Rouge+Script' rel='stylesheet'>
    <title>Email Verification -URBANWOOD</title>
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: sans-serif;
            color: #333;
            background-color: #e6e8fc;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            min-height: 100%;
        }

        .login-container {
            display: flex;
            width: 90%;
            max-width: 1200px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            overflow: hidden;
            background-color: #fff;
            height: 80vh;
        }

        .form-section {
            flex: 1;
            padding: 40px;
            background-color: #e6e8fc;
            display: flex;
            flex-direction: column;
            justify-content: center;
            border-radius: 12px;
        }

        .form-section h1 {
            font-family:sans-serif;
            font-size: 40px;
            color: #333;
            margin-bottom: 5px;
            text-align: center;
        }

        .form-section p {
            text-align: center;
            margin-bottom: 30px;
            color: #666;
        }

        .form-section form {
            display: flex;
            flex-direction: column;
        }

        .form-section label {
            margin-bottom: 5px;
            font-size: 14px;
            font-weight: bold;
            color: #444;
        }

        .form-section input {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .form-section input:focus {
            outline: none;
            border-color: #6c63ff;
        }

        .form-section button {
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #6c63ff;
            color: white;
            font-size: 16px;
            cursor: pointer;
            margin-bottom: 10px;
        }

        .form-section button:hover {
            background-color: #554cb7;
        }

        .form-section .otp-timer {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #f0f0f0;
            font-size: 14px;
            color: black;
            text-align: center;
            margin: 10px auto;
        }

        .form-section .link {
            text-align: center;
            font-size: 14px;
            margin-top: 10px;
        }

        .form-section .link a {
            color: #6c63ff;
            text-decoration: none;
            font-weight: bold;
        }

        .form-section .link a:hover {
            text-decoration: underline;
        }

        .image-section {
            flex: 1.5;
            height: 100%;
            background-image: url("/img/Luxury\ Home\ Decor\ Modern\ Bedroom\ Idea.jpeg");
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            pointer-events: none;
            border-radius: 0 20px 20px 0;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .login-container {
                flex-direction: column;
                height: auto;
            }

            .form-section, .image-section {
                width: 100%;
                height: auto;
                border-radius: 12px;
            }

            .image-section {
                height: 250px;
            }

            .form-section h1 {
                font-size: 24px;
            }

            .form-section input, .form-section button {
                font-size: 16px;
                padding: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Form Section -->
        <div class="form-section">
            <h1>URBANWOOD</h1>
            <p>Email Verification</p>
            <form id="otpForm" onsubmit="return validateOTPForm()">
                <label for="otp">Enter OTP:</label>
                <input type="text" id="otp" name="otp" placeholder="Enter OTP" required>
                <div id="otp-error" class="error-message"></div>

                <button type="submit">Verify OTP</button>
            </form>
            <div class="otp-timer">
                <span id="timerValue">50s</span>
            </div>
            <div class="link">
                <button type="button" id="resendOtp" onclick="resendOTP()">Resend OTP</button>
            </div>
            <% if (locals.message && message.length > 0) { %>
                <div class="alert alert-danger mt-3">
                    <%= message %>
                </div>
                <% } %>
                
            <div class="link">
                Already verified? <a href="/login">Login</a>
            </div>
        </div>

        <!-- Image Section -->
        <div class="image-section"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        let timer = 60;
        let otpTimerInterval;
       

        function initializeOtpTimer() {
             const timerElement = document.getElementById("timerValue");
         otpTimerInterval = setInterval(function() {
            const minutes=Math.floor(timer/60);
            const seconds=timer%60;
            timerElement.textContent=`${minutes}:${seconds<10?'0':''}${seconds}`;

                if (--timer<0) {
     
                    clearInterval(otpTimerInterval);
                    timerElement.textContent="Expired";
                    timerElement.style.backgroundColor="red";
                }
            },1000);
        }

        initializeOtpTimer();

        function validateOTPForm() {
            const otpInput = document.getElementById("otp").value;

            // if (!otpInput) {
            //     Swal.fire({
            //         icon: 'error',
            //         title: 'Invalid OTP',
            //         text: 'Please enter a valid OTP.',
            //     });
            //     return false;
            // }

            $.ajax({
                type: "POST",
                url: "/verify-passForgot-otp",
                data: { otp: otpInput },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "OTP Verified Successfully",
                            showConfirmButton: false,
                            timer: 1500,
                        }).then(() => {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "",
                            text: response.message,
                            
                        });
                        console.log(response)
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: "error",
                        title: "Invalid OTP",
                        text: "Please try again",
                    });
                }
            });
            return false;
        }
        function resendOTP() {
    clearInterval(otpTimerInterval); 
    timer = 60; 
    initializeOtpTimer(); 

    $.ajax({
        type: "POST",
        url: "/resend-forgot-otp",
        success: function(response) {
            console.log("Response:", response); 
            if (response.success) {
                Swal.fire({
                    icon: "success",
                    title: "OTP Resent Successfully",
                    showConfirmButton: false,
                    timer: 1500,
                });
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: "An error occurred while resending the OTP. Please try again later.",
                });
            }
        },
        error: function() {
            Swal.fire({
                icon: "error",
                title: "Error",
                text: "An error occurred while resending the OTP. Please try again later.",
            });
        }
    });
    return false;
}

    </script>
</body>
</html>