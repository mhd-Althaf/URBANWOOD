			window.addToCart = async function (productId) {
				const quantity = document.getElementById('sst').value;

				try {
					const response = await fetch('/addToCart', {
						method: 'POST',
						headers: {
							'Content-Type': 'application/json',
						},
						body: JSON.stringify({
