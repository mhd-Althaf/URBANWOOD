							text: 'Product added to wishlist successfully',
							showConfirmButton: false,
							timer: 1500
						});
					} else {
						throw new Error(data.message || 'Failed to add to wishlist');
					}
				} catch (error) {
					Swal.fire({
						icon: 'error',
						title: 'Oops...',
						text: error.message || 'Something went wrong!',
					});
				}
			};

			// Initialize Image Zoom Functionality
			document.addEventListener('DOMContentLoaded', function() {
				const containers = document.querySelectorAll('.product-image-container');

				containers.forEach(container => {
					const img = container.querySelector('img');
					const lens = document.createElement('div');
					lens.className = 'magnifier-lens';
					container.appendChild(lens);

					function getRelativePos(e) {
						const rect = container.getBoundingClientRect();
						return {
							x: e.pageX - rect.left - window.scrollX,
							y: e.pageY - rect.top - window.scrollY
						};
					}

					function moveLens(e) {
						const pos = getRelativePos(e);
						const lensWidth = lens.offsetWidth;
						const lensHeight = lens.offsetHeight;
						const imgWidth = img.offsetWidth;
						const imgHeight = img.offsetHeight;

						// Calculate lens position
						let x = pos.x - lensWidth / 2;
						let y = pos.y - lensHeight / 2;

						// Prevent lens from going outside the image
						x = Math.max(0, Math.min(x, imgWidth - lensWidth));
						y = Math.max(0, Math.min(y, imgHeight - lensHeight));

						// Calculate zoom ratio
						const zoomRatio = 2; // Adjust this value to change zoom level

						// Update lens position and background
						lens.style.left = `${x}px`;
						lens.style.top = `${y}px`;
						lens.style.backgroundImage = `url(${img.src})`;
						lens.style.backgroundSize = `${imgWidth * zoomRatio}px ${imgHeight * zoomRatio}px`;
						lens.style.backgroundPosition = `-${x * zoomRatio}px -${y * zoomRatio}px`;
					}

					// Event listeners for mouse interactions
					container.addEventListener('mouseenter', function(e) {
						lens.style.opacity = '1';
						moveLens(e);
					});

					container.addEventListener('mouseleave', function() {
						lens.style.opacity = '0';
					});

					container.addEventListener('mousemove', moveLens);

					// Handle carousel slide changes
					if (typeof $.fn.owlCarousel !== 'undefined') {
						$('.s_Product_carousel').on('translated.owl.carousel', function() {
							// Reset lens visibility when sliding
							lens.style.opacity = '0';
						});
					}
				});
			});

			// Tab Navigation
			$('.nav-tabs a').on('click', function (e) {
				e.preventDefault();
				$(this).tab('show');
			});

			// Rating Stars Interaction
			document.querySelectorAll('.rating-star').forEach(star => {
				star.addEventListener('click', function () {
					const value = parseInt(this.dataset.value);
					const stars = document.querySelectorAll('.rating-star');

					stars.forEach((s, index) => {
						s.classList.toggle('fas', index < value);
						s.classList.toggle('far', index >= value);
					});

					document.getElementById('selectedRating').value = value;
				});
			});

			// Review Form Submission
			const reviewForm = document.getElementById('reviewForm');
			if (reviewForm) {
				reviewForm.addEventListener('submit', function (e) {
					e.preventDefault();
					Swal.fire('Thank you!', 'Your review has been submitted.', 'success');
					this.reset();
					document.querySelectorAll('.rating-star').forEach(star => {
						star.classList.remove('fas');
						star.classList.add('far');
					});
				});
			}
		});
