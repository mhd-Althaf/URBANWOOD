<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css" rel="stylesheet">
    
    <style>
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 14px;
        }
        .status-pending { background-color: #fff3cd; color: #856404; }
        .status-shipped { background-color: #cce5ff; color: #004085; }
        .status-delivered { background-color: #d4edda; color: #155724; }
        .status-cancelled { background-color: #f8d7da; color: #721c24; }
        
        .table th { 
            background-color: #f8f9fa;
        }
        
        .btn-show {
            background-color: #b46e59;
            color: white;
        }
        
        .btn-show:hover {
            background-color: #a25c48;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Order History</h2>
        
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total Items</th>
                        <th>Total Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).forEach(order => { %>
                        <tr>
                            <td>#<%= order.orderId %></td>
                            <td><%= order.createdAt.toLocaleString() %></td>
                            <td>
                                <span class="status-badge status-<%= order.status.toLowerCase() %>">
                                    <%= order.status %>
                                </span>
                            </td>
                            <td><%= order.orderItems.length %></td>
                            <td>â‚¹<%= order.finalAmount.toFixed(2) %></td>
                            <td>
                                <button class="btn btn-show btn-sm" data-bs-toggle="modal" data-bs-target="#orderModal<%= order.orderId %>">
                                    Show Details
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal for each order -->
    <% orders.forEach(order => { %>
        <div class="modal fade" id="orderModal<%= order.orderId %>" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Order Details #<%= order.orderId %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Original order card content -->
                        <div class="order-card">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <h6 class="mb-3">Order Information</h6>
                                    <p class="mb-1">Date: <%= order.createdAt.toLocaleString() %></p>
                                    <p class="mb-1">Status: <span class="status-badge status-<%= order.status.toLowerCase() %>"><%= order.status %></span></p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="mb-3">Payment Details</h6>
                                    <p class="mb-1">Method: <%= order.paymentMethod %></p>
                                    <p class="mb-1">Status: <%= order.paymentStatus %></p>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-12">
                                    <h6 class="mb-3">Shipping Address</h6>
                                    <p class="mb-1"><%= order.address.name %></p>
                                    <p class="mb-1"><%= order.address.city %>, <%= order.address.state %> - <%= order.address.pincode %></p>
                                    <p class="mb-1">ðŸ“ž <%= order.address.phone %></p>
                                </div>
                            </div>

                            <div class="mb-4">
                                <h6 class="mb-3">Order Items</h6>
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% order.orderItems.forEach(item => { %>
                                                <tr>
                                                    <td><%= item.name %></td>
                                                    <td><%= item.quantity %></td>
                                                    <td>â‚¹<%= item.price.toFixed(2) %></td>
                                                    <td>â‚¹<%= (item.price * item.quantity).toFixed(2) %></td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 ms-auto">
                                    <table class="table">
                                        <tr>
                                            <td>Subtotal:</td>
                                            <td class="text-end">â‚¹<%= order.totalPrice.toFixed(2) %></td>
                                        </tr>
                                        <tr>
                                            <td>Discount:</td>
                                            <td class="text-end">â‚¹<%= order.discount.toFixed(2) %></td>
                                        </tr>
                                        <tr class="fw-bold">
                                            <td>Total:</td>
                                            <td class="text-end">â‚¹<%= order.finalAmount.toFixed(2) %></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <% if (["Pending", "Processing", "Shipped"].includes(order.status)) { %>
                                <div class="mt-3">
                                    <button class="btn btn-danger" onclick="cancelOrder('<%= order.orderId %>')">
                                        Cancel Order
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        function cancelOrder(orderId) {
            console.log("giii",orderId);
            // const paymentMethod = document.getElementById("paymentMethod").value;

            Swal.fire({
                title: 'Confirm Cancel Order',
                text: 'Are you sure you want to cancel this order?',
                icon: 'warning',
                showCancelButton: true,
                cancelButtonText: 'No, keep it',
                confirmButtonText: 'Yes, cancel it!',
                // input: 'textarea',
                // inputPlaceholder: 'Enter the reason for cancellation (optional)',
                inputAttributes: {
                    'aria-label': 'Type your reason here',
                },
                showLoaderOnConfirm: true,
                preConfirm: (reason) => {
                    if (!reason) {
                        reason = "No reason provided";
                    }

                    return $.ajax({
                        url: '/cancelOrder',
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({
                            orderId: orderId,
                            reason: reason,
                            // paymentMethod: paymentMethod,
                        }),
                    })
                    .then((response) => {
                        if (response.message && response.message.includes("Order cancelled successfully")) {
                            return response;
                        } else {
                            throw new Error(response.message || "Cancellation failed");
                        }
                    })
                    .catch((error) => {
                        Swal.showValidationMessage(`Request failed: ${error.message}`);
                    });
                },
                allowOutsideClick: () => !Swal.isLoading(),
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire('Cancelled!', 'Your order has been cancelled successfully.', 'success').then(() => {
                        window.location.reload();
                    });
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire('Cancelled', 'Your order remains active.', 'info');
                }
            });
        }
    </script>
</body>
</html>