<%-include("../../views/partials/user/header.ejs")%>
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Shopping Cart</h1>
					<nav class="d-flex align-items-center">
						<a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- Hero Section -->
	<section class="hero-section bg-light py-5">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 order-lg-1 order-2">
					<h1 class="display-4 fw-bold mb-4">Transform Your Space with Premium Furniture</h1>
					<p class="lead mb-4">Discover handcrafted furniture that blends comfort, style, and functionality
					</p>
					<a href="#products" class="btn btn-primary btn-lg px-5">Shop Now</a>
				</div>
				<div class="col-lg-6 order-lg-2 order-1 mb-4 mb-lg-0">
					<img src="/img/Luxury Home Decor Modern Bedroom Idea.jpeg" alt="Modern Furniture"
						class="img-fluid rounded-3 shadow">
				</div>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section class="features-section py-5 bg-white">
		<div class="container">
			<div class="row g-4">
				<div class="col-md-3 col-6 text-center">
					<div class="feature-card p-4 rounded-3 shadow-sm">
						<i class="fas fa-truck fa-3x text-primary mb-3"></i>
						<h5 class="fw-bold mb-2">Free Shipping</h5>
						<p class="text-muted mb-0">On orders over ₹5000</p>
					</div>
				</div>
				<div class="col-md-3 col-6 text-center">
					<div class="feature-card p-4 rounded-3 shadow-sm">
						<i class="fas fa-undo fa-3x text-primary mb-3"></i>
						<h5 class="fw-bold mb-2">Easy Returns</h5>
						<p class="text-muted mb-0">30-day return policy</p>
					</div>
				</div>
				<div class="col-md-3 col-6 text-center">
					<div class="feature-card p-4 rounded-3 shadow-sm">
						<i class="fas fa-lock fa-3x text-primary mb-3"></i>
						<h5 class="fw-bold mb-2">Secure Payment</h5>
						<p class="text-muted mb-0">100% secure checkout</p>
					</div>
				</div>
				<div class="col-md-3 col-6 text-center">
					<div class="feature-card p-4 rounded-3 shadow-sm">
						<i class="fas fa-headset fa-3x text-primary mb-3"></i>
						<h5 class="fw-bold mb-2">24/7 Support</h5>
						<p class="text-muted mb-0">Dedicated support team</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Products Section -->
	<section id="products" class="products-section py-5">
		<div class="container">
			<div class="text-center mb-5">
				<h2 class="section-title mb-3">Our Latest Collections</h2>
				<p class="text-muted">Explore our curated selection of premium furniture</p>
			</div>

			<div class="row g-4">
				<% products.forEach(function(product, index) { %>
					<div class="col-lg-3 col-md-4 col-6">
						<div class="product-card h-100 border-0 rounded-3 overflow-hidden shadow-sm">
							<div class="product-image position-relative">
								<a href="/product-details/<%= product._id %>">
									<img src="<%= product.productImages && product.productImages.length > 0 ? 
									'/uploads/re-image/' + product.productImages[0] : 
									'/uploads/product-images/default.jpg' %>" class="img-fluid product-img" alt="<%= product.productName %>">
								</a>
								<!-- Favorite Button - Top Right Corner -->
								<div class="position-absolute top-0 end-0 p-2" style="z-index: 2;">
									<button class="btn btn-sm btn-light rounded-circle shadow-sm"
										style="width: 36px; height: 36px; padding: 0;">
										<i class="far fa-heart align-middle" style="font-size: 1.1rem;"></i>
									</button>
								</div>
							</div>
							<div class="product-details p-3">
								<h6 class="product-title mb-1">
									<a href="/product-details/<%= product._id %>"
										class="text-dark text-decoration-none">
										<%= product.productName %>
									</a>
								</h6>
								<p class="product-brand small text-muted mb-2">
									<%= product.brand || 'Premium Brand' %>
								</p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="price">
										<% if(product.salePrice) { %>
											<span class="text-primary fw-bold">₹<%= product.salePrice %></span>
											<del class="text-muted small ms-2">₹<%= product.price %></del>
											<% } else { %>
												<span class="text-primary fw-bold">₹<%= product.price %></span>
												<% } %>
									</div>
									<!-- <button class="btn btn-sm btn-outline-primary add-to-cart">
										<a href="/"><i class="fas fa-cart-plus"></i></a>
									</button> -->
								</div>
							</div>
						</div>
					</div>
					<% }); %>
			</div>
		</div>
	</section>

	<!-- Promo Banner -->
	<section class="promo-banner py-5 bg-dark text-white">
		<div class="container text-center">
			<h2 class="display-5 fw-bold mb-4">Limited Time Offer!</h2>
			<p class="mb-4">Get 15% off on your first order</p>
			<div class="countdown-timer mb-4" id="countdown">
				<div class="d-inline-block mx-2">
					<span class="days display-4 fw-bold">00</span>
					<div class="small">Days</div>
				</div>
				<div class="d-inline-block mx-2">
					<span class="hours display-4 fw-bold">00</span>
					<div class="small">Hours</div>
				</div>
				<div class="d-inline-block mx-2">
					<span class="minutes display-4 fw-bold">00</span>
					<div class="small">Mins</div>
				</div>
				<div class="d-inline-block mx-2">
					<span class="seconds display-4 fw-bold">00</span>
					<div class="small">Secs</div>
				</div>
			</div>
			<a href="#products" class="btn btn-light btn-lg px-5">Shop the Sale</a>
		</div>
	</section>

	<%-include("../../views/partials/user/footer")%>

		<style>
			.hero-section {
				background: linear-gradient(45deg, #f8f9fa 50%, #ffffff 50%);
			}

			.product-card {
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}

			.product-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
			}

			.product-img {
				height: 250px;
				object-fit: cover;
				transition: transform 0.3s ease;
			}

			.product-img:hover {
				transform: scale(1.05);
			}

			.countdown-timer span {
				padding: 10px 20px;
				background: rgba(255, 255, 255, 0.1);
				border-radius: 5px;
				margin: 0 5px;
			}

			.feature-card {
				transition: transform 0.3s ease;
			}

			.feature-card:hover {
				transform: translateY(-5px);
			}

			.far.fa-heart {
				transition: color 0.3s ease;
			}

			.far.fa-heart:hover {
				color: #dc3545 !important;
				/* Red color on hover */
			}

			.btn-light:hover {
				background-color: rgba(255, 255, 255, 0.9) !important;
			}
		</style>

		<script>
			// Simple Countdown Timer
			function updateTimer() {
				const countdown = document.getElementById('countdown');
				const days = countdown.querySelector('.days');
				const hours = countdown.querySelector('.hours');
				const minutes = countdown.querySelector('.minutes');
				const seconds = countdown.querySelector('.seconds');

				const targetDate = new Date();
				targetDate.setDate(targetDate.getDate() + 7);

				function update() {
					const now = new Date().getTime();
					const difference = targetDate - now;

					days.textContent = Math.floor(difference / (1000 * 60 * 60 * 24));
					hours.textContent = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
					minutes.textContent = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
					seconds.textContent = Math.floor((difference % (1000 * 60)) / 1000);
				}

				update();
				setInterval(update, 1000);
			}

			document.addEventListener('DOMContentLoaded', updateTimer);
		</script>