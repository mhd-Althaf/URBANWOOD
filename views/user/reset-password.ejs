<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Rouge+Script' rel='stylesheet'>
    <title>Change Password - URBANWOOD</title>
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            color: #333;
            background-color: #e6e8fc;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            min-height: 100%;
        }

        .login-container {
            display: flex;
            width: 90%;
            max-width: 1200px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            overflow: hidden;
            background-color: #fff;
            height: auto;
        }

        .form-section {
            flex: 1;
            padding: 40px;
            background-color: #e6e8fc;
            display: flex;
            flex-direction: column;
            justify-content: center;
            border-radius: 12px;
        }

        .form-section h1 {
            font-family: 'san sarif';
            font-size: 40px;
            color: #333;
            margin-bottom: 10px;
            text-align: center;
        }

        .form-section p {
            text-align: center;
            margin-bottom: 30px;
            color: #666;
        }

        .form-section form {
            display: flex;
            flex-direction: column;
        }

        .form-section label {
            margin-bottom: 5px;
            font-size: 14px;
            font-weight: bold;
            color: #444;
        }

        .form-section input {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .form-section input:focus {
            outline: none;
            border-color: #6c63ff;
        }

        .form-section .error-message {
            font-size: 12px;
            color: red;
            margin-bottom: 10px;
        }

        .form-section button {
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #6c63ff;
            color: white;
            font-size: 16px;
            cursor: pointer;
            margin-bottom: 10px;
        }

        .form-section button:hover {
            background-color: #554cb7;
        }

        .form-section .link {
            text-align: center;
            font-size: 14px;
            margin-top: 10px;
        }

        .form-section .link a {
            color: #6c63ff;
            text-decoration: none;
            font-weight: bold;
        }

        .form-section .link a:hover {
            text-decoration: underline;
        }

        .image-section {
            flex: 1.5;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 0 20px 20px 0;
        }

        .image-section img {
            max-width: 100%;
            max-height: 100%;
            border-radius: inherit;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .login-container {
                flex-direction: column;
                height: auto;
            }

            .form-section, .image-section {
                width: 100%;
                height: auto;
                border-radius: 12px;
            }

            .image-section {
                height: 250px;
            }

            .form-section h1 {
                font-size: 24px;
            }

            .form-section input, .form-section button {
                font-size: 16px;
                padding: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Form Section -->
        <div class="form-section">
            <h1>URBANWOOD</h1>
            <p>Change Password</p>
            <form id="changePasswordForm" action="/reset-password" method="POST" onsubmit="return validateForm()">
                <div id="alertMessage" class="error-message">
                    <% if (message) { %>
                        <%= message %>
                    <% } %>
                </div>
                <div class="mb-3 position-relative">
                    <label for="newPass1">New Password:</label>
                    <input type="password" id="newPass1" name="newPass1" placeholder="Enter new password" >
                    <div id="newPass1Error" class="error-message"></div>
                </div>
                <div class="mb-3 position-relative">
                    <label for="newPass2">Confirm New Password:</label>
                    <input type="password" id="newPass2" name="newPass2" placeholder="Re-enter new password">
                    <div id="newPass2Error" class="error-message"></div>
                </div>
                <button type="submit">Change Password</button>
            </form>
            <p class="text-center mt-4">Don't have an account? <a href="/signup">Sign up</a></p>
        </div>

        <!-- Image Section -->
        <div class="image-section"><img src="/img/Luxury Home Decor Modern Bedroom Idea.jpeg"></div>
    </div>

    <script>
        function validateForm() {
            let valid = true;
            const newPass1 = document.getElementById('newPass1');
            const newPass2 = document.getElementById('newPass2');
            const newPass1Error = document.getElementById('newPass1Error');
            const newPass2Error = document.getElementById('newPass2Error');

            newPass1Error.textContent = '';
            newPass2Error.textContent = '';

            if (!newPass1.value.trim()) {
                newPass1Error.textContent = 'Password cannot be empty.';
                valid = false;
            } else if (newPass1.value.length < 6) {
                newPass1Error.textContent = 'Password must be at least 6 characters long.';
                valid = false;
            }

            if (!newPass2.value.trim()) {
                newPass2Error.textContent = 'Please re-enter your password.';
                valid = false;
            } else if (newPass2.value !== newPass1.value) {
                newPass2Error.textContent = 'Passwords do not match.';
                valid = false;
            }

            return valid;
        }
    </script>
</body>
</html>