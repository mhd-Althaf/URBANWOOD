<div class="card mb-4">
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger m-3">
            <%= error %>
        </div>
    <% } %>

    <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-info m-3">
            <%= message %>
        </div>
    <% } %>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Sl No</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Sale Price</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products && products.length > 0) { %>
                        <% products.forEach((product, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>
                                    <% if (product.productImages && product.productImages.length > 0) { %>
                                        <img src="/uploads/product-images/<%= product.productImages[0] %>" 
                                             alt="<%= product.productName %>"
                                             style="width: 50px; height: 50px; object-fit: cover;"
                                             onerror="this.src='/images/default-product.jpg'">
                                    <% } else { %>
                                        <img src="/images/default-product.jpg" 
                                             alt="Default Image"
                                             style="width: 50px; height: 50px; object-fit: cover;">
                                    <% } %>
                                </td>
                                <td>
                                    <strong><%= product.productName %></strong>
                                    <br>
                                    <small class="text-muted"><%= product.description.substring(0, 50) %>...</small>
                                </td>
                                <td><%= product.category %></td>
                                <td>₹<%= product.regularPrice %></td>
                                <td>₹<%= product.salePrice %></td>
                                <td><%= product.quantity %></td>
                                <td><%= product.metalType %></td>
                                <td>
                                    <span class="badge bg-<%= product.status === 'Available' ? 'success' : 'danger' %>">
                                        <%= product.status %>
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="/admin/editProduct/<%= product._id %>" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="deleteProduct('<%= product._id %>')" 
                                                class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="10" class="text-center">No products found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="pagination-container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <div class="showing-results">
            Showing <%= products.length %> of <%= totalProducts %> products
        </div>
        
        <nav aria-label="Product navigation">
            <ul class="pagination">
                <% if (hasPrevPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="/admin/products?page=1" aria-label="First">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="/admin/products?page=<%= prevPage %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                <% } %>

                <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="/admin/products?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>

                <% if (hasNextPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="/admin/products?page=<%= nextPage %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="/admin/products?page=<%= lastPage %>" aria-label="Last">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>

        <div class="items-per-page">
            <select class="form-select" onchange="changeItemsPerPage(this.value)">
                <option value="10" <%= limit === 10 ? 'selected' : '' %>>10 per page</option>
                <option value="20" <%= limit === 20 ? 'selected' : '' %>>20 per page</option>
                <option value="50" <%= limit === 50 ? 'selected' : '' %>>50 per page</option>
                <option value="100" <%= limit === 100 ? 'selected' : '' %>>100 per page</option>
            </select>
        </div>
    </div>
</div>

<script>
function changeItemsPerPage(limit) {
    window.location.href = `/admin/products?page=1&limit=${limit}`;
}

// Add some styling
document.addEventListener('DOMContentLoaded', function() {
    const style = document.createElement('style');
    style.textContent = `
        .pagination-container {
            margin: 20px 0;
            padding: 0 15px;
        }
        .showing-results {
            color: #6c757d;
        }
        .pagination {
            margin: 0;
        }
        .items-per-page {
            width: 120px;
        }
        .page-link {
            color: #333;
            border-color: #dee2e6;
        }
        .page-item.active .page-link {
            background-color: #333;
            border-color: #333;
        }
    `;
    document.head.appendChild(style);
});
</script> 
</div> 